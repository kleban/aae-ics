<syncfusion:ChromelessWindow x:Class="AAEICS.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AAEICS.Client"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}"
        mc:Ignorable="d"
        Title="AAC-ICS Client | Home"
        
        Height="800" Width="1200"
        CornerRadius="10"
        ResizeBorderThickness="5"
        BorderThickness="1"
        BorderBrush="#E0E0E0"
        Background="White"
        
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        
        TitleBarHeight="50"
        ShowIcon="False">
    
    <syncfusion:ChromelessWindow.TitleBarTemplate>
        <ControlTemplate>
            <Grid Background="Transparent" 
                  MouseLeftButtonDown="TitleBar_MouseDown" 
                  MouseMove="TitleBar_MouseMove">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Margin="10,0,5,0" 
                        Style="{StaticResource MenuButtonStyle}" 
                        Click="ToggleSidebar_Click">
                    <Path Data="{StaticResource HamburgerIcon}" 
                          Stroke="#444444" StrokeThickness="2" 
                          Width="18" Height="18" Stretch="Uniform"/>
                </Button>

                <TextBlock Grid.Column="1" 
                           Text="{
                               Binding Title, 
                               RelativeSource={RelativeSource AncestorType=syncfusion:ChromelessWindow}
                           }" 
                           VerticalAlignment="Center" 
                           Margin="5,0,20,0" 
                           FontSize="15" FontWeight="SemiBold" Foreground="#333333"/>
                
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Stretch">
                    <Button Style="{StaticResource WindowControlButtonStyle}" Click="Minimize_Click">
                        <Path Data="{StaticResource MinimizeIcon}" Fill="#444444" Width="14" Height="14" Stretch="Uniform"/>
                    </Button>
                    
                    <Button Style="{StaticResource WindowControlButtonStyle}" Click="Maximize_Click">
                        <Path Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                              Width="14" Height="14" Stretch="Uniform">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Data" Value="{StaticResource MaximizeIcon}"/>
                
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                                            <Setter Property="Data" Value="{StaticResource RestoreIcon}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>
                    
                    <Button Style="{StaticResource WindowCloseButtonStyle}" Click="Close_Click">
                        <Path Data="{StaticResource CloseIcon}" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1.5" Width="14" Height="14" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </ControlTemplate>
    </syncfusion:ChromelessWindow.TitleBarTemplate>

    <syncfusion:SfNavigationDrawer x:Name="NavigationDrawer"
                                   DisplayMode="Expanded"
                                   IsOpen="True"
                                   IsToggleButtonVisible="False"
                                   ItemClicked="NavigationDrawer_ItemClicked">
            
        <syncfusion:SfNavigationDrawer.Items>
            <syncfusion:NavigationItem Header="Home" 
                                       Tag="home" 
                                       IsSelected="True">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource Icon.Home}" 
                          Fill="#444444" 
                          Width="20" Height="20" Stretch="Uniform"/>
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
                
            <syncfusion:NavigationItem Header="Settings" 
                                       Tag="settings">
                <syncfusion:NavigationItem.Icon>
                    <Path Data="{StaticResource Icon.Settings}" 
                          Fill="#444444" 
                          Width="20" Height="20" Stretch="Uniform"/>
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
        </syncfusion:SfNavigationDrawer.Items>

        <syncfusion:SfNavigationDrawer.ContentView>
            <Grid Background="White">
                <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden"/>
            </Grid>
        </syncfusion:SfNavigationDrawer.ContentView>

    </syncfusion:SfNavigationDrawer>
</syncfusion:ChromelessWindow>