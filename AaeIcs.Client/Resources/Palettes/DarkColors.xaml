<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Shadow Effects Colors -->
    
    <Color x:Key="DropShadowEffectColor">#1A1D21</Color>
    <Color x:Key="SideMenuButtonEffectColor">#FFDD00</Color>
    
    <!-- MainWindow Brushes -->
    
    <SolidColorBrush x:Key="SurfaceBrush" Color="#373E46"/>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#373E46"/>
    <SolidColorBrush x:Key="WindowTitleBarHeaderBrush" Color="#E9EBED"/>
    <SolidColorBrush x:Key="WindowControlButtonForegroundBrush" Color="#E9EBED"/>
    <SolidColorBrush x:Key="WindowControlButtonBackgroundHoverBrush" Color="#454D55"/>
    <SolidColorBrush x:Key="WindowControlButtonForegroundHoverBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="WindowCloseButtonBackgroundHoverBrush" Color="#E81123"/>
    <SolidColorBrush x:Key="WindowCLoseButtonForegroundHoverBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="WindowMainFrameBackgroundBrush" Color="#292F34"/>
    <!-- Primary Brand Brushes -->
    
    <SolidColorBrush x:Key="PrimaryBrandBrush" Color="#FFDD00"/>
    <SolidColorBrush x:Key="PrimaryBrandActiveBrush" Color="#E6C702"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#2D2700"/>
    <SolidColorBrush x:Key="PrimaryTextHoverBrush" Color="#000000"/>
    
    <!-- Secondary Brand Brushes-->
    
    <SolidColorBrush x:Key="SecondaryBrandBrush" Color="#292F34"/>
    <SolidColorBrush x:Key="SecondaryBrandActiveBrush" Color="#1E2226"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#ACB4BD"/>
    <SolidColorBrush x:Key="SecondaryTextHoverBrush" Color="#FFFFFF"/>
    
    <!-- Dashboard Brushes -->
    
    <SolidColorBrush x:Key="DashboardTitleBorderBrush" Color="#292F34"/>
    <SolidColorBrush x:Key="DashboardTextForegroundBrush" Color="#E9EBED"/>
    
    <!-- Side Menu Brushes -->
    <SolidColorBrush x:Key="SideMenuBackgroundBrush" Color="#373E46"/>
    <SolidColorBrush x:Key="SideMenuStackPanelBrush" Color="#212529"/>
    <SolidColorBrush x:Key="SideMenuOptionTextBrush" Color="#E9EBED"/>
    <SolidColorBrush x:Key="SideMenuOptionHoverBrush" Color="#292F34"/>
    <SolidColorBrush x:Key="SideMenuOptionPressedBrush" Color="#282D33"/>
    
    <!-- ActLinesDataGrid Brushes-->
    
    <SolidColorBrush x:Key="DataGridTextForeground" Color="#DCE0E4"/>
    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="#212529"/>
    <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="#373E46"/>
    <SolidColorBrush x:Key="DataGridRowSelectedInactiveBackgroundBrush" Color="#454D55"/>
    <SolidColorBrush x:Key="DataGridTextActiveForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridEditButtonBackgroundBrush" Color="#512DA8"/>
    <SolidColorBrush x:Key="DataGridEditButtonBorderBrush" Color="#4A148C"/>
    <SolidColorBrush x:Key="DataGridEditButtonHoveredBrush" Color="#673AB7"/>
    <SolidColorBrush x:Key="DataGridDeleteButtonBackgroundBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="DataGridDeleteButtonBorderBrush" Color="#B71C1C"/>
    <SolidColorBrush x:Key="DataGridDeleteButtonHoveredBrush" Color="#F44336"/>
    
    <!--#region Check Box Style-->
    
    <SolidColorBrush x:Key="CheckBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundHoveredBrush" Color="#FFF3F9FF"/>
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#DAE2EA"/>
    <SolidColorBrush x:Key="CheckBoxGlyphForegroundBrush" Color="#FF212121"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundDisabledBrush" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="CheckBoxBorderDisabledBrush" Color="#FFBCBCBC"/>
    <SolidColorBrush x:Key="CheckBoxGlyphForegroundDisabledBrush" Color="#FF707070"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundPressedBrush" Color="#FFD9ECFF"/>
    <SolidColorBrush x:Key="CheckBoxGlyphForegroundPressedBrush" Color="#FF212121"/>
    
    <!-- ToggleButton Brushes -->
    
    <SolidColorBrush x:Key="ToggleButtonBackground" Color="#707070"/>
    <SolidColorBrush x:Key="ToggleButtonBackgroundHover" Color="#454D55"/>
    <SolidColorBrush x:Key="ToggleButtonSwitchDisabledBackground" Color="#808080"/>
    <SolidColorBrush x:Key="ToggleButtonSwitchEnabledBackground" Color="#FFDD00"/>
</ResourceDictionary>