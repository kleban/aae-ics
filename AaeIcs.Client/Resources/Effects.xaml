<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <DropShadowEffect x:Key="CardShadow" BlurRadius="15" ShadowDepth="2" Direction="270" Color="{DynamicResource DropShadowEffectColor}" Opacity="0.4"/>
    <DropShadowEffect x:Key="SideMenuButtonShadow" BlurRadius="0" ShadowDepth="0" Color="{DynamicResource SideMenuButtonEffectColor}" Opacity="1"/>
    <DropShadowEffect x:Key="ToggleButtonShadow" Opacity="0.2"/>
</ResourceDictionary>