<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:AAEICS.Client.Helpers">
        
    <Style x:Key="PrimaryButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrandBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            BorderThickness="0"
                            Background="{DynamicResource PrimaryBrandBrush}"
                            CornerRadius="{Binding Path=(helpers:ButtonHelper.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}">
                        <TextBlock x:Name="BtnText"
                                   Text="{TemplateBinding Content}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="{TemplateBinding FontSize}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontFamily="{DynamicResource MainFontSemiBold}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{DynamicResource PrimaryBrandActiveBrush}" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="{DynamicResource PrimaryTextBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{DynamicResource PrimaryBrandBrush}" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="{DynamicResource PrimaryTextHoverBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="SecondaryButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource SecondaryBrandBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            BorderThickness="0"
                            Background="{DynamicResource SecondaryBrandBrush}"
                            CornerRadius="{Binding Path=(helpers:ButtonHelper.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}">
                        <TextBlock x:Name="BtnText"
                                   Text="{TemplateBinding Content}"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontSize="{TemplateBinding FontSize}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontFamily="{DynamicResource MainFontSemiBold}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{DynamicResource SecondaryBrandActiveBrush}" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="{DynamicResource SecondaryTextBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{DynamicResource SecondaryBrandBrush}" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="{DynamicResource SecondaryTextHoverBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Button" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="40" />
        <Setter Property="Background" Value="#ED8F0C" />
        <Setter Property="Width" Value="120" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Margin" Value="40,10,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                                                BorderThickness="0"
                                                Background="#ED8F0C"
                                                CornerRadius="20">
                        <TextBlock x:Name="BtnText"
                                                       Text="GET STARTED"
                                                       Foreground="#FFFFFF"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontFamily="Fonts/#Open Sans SemiBold" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#CF7D0A" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="#FFFFFF" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#ED8F0C" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="#292F34" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonDesktop"  TargetType="{x:Type Button}">
        <Setter Property="Height" Value="50" />
        <Setter Property="Background" Value="#ED8F0C" />
        <Setter Property="Width" Value="150" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Margin" Value="60,10,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                                                BorderThickness="0"
                                                Background="#ED8F0C"
                                                CornerRadius="25">
                        <TextBlock x:Name="BtnText"
                                                       Text="GET STARTED"
                                                       Foreground="#FFFFFF"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontFamily="Fonts/#Open Sans SemiBold" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#CF7D0A" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="#FFFFFF" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#ED8F0C" />
                            <Setter Property="Foreground" TargetName="BtnText" Value="#292F34" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>