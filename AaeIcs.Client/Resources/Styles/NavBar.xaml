<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="NavBarStyle" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="10,10"/>
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Height" Value="auto"/>
        <Setter Property="Background" Value="{DynamicResource NavBarBackgroundBrush}" />
    </Style>
    
    <Style  x:Key="NavBarButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Margin="0" Padding="10"
                            CornerRadius="8"
                            BorderThickness="0"
                            Background="{DynamicResource NavBarButtonBackgroundBrush}">
                        <TextBlock x:Name="BtnText" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   FontFamily="Fonts/#Open Sans SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Text="{TemplateBinding Content}"
                                   TextWrapping="Wrap" 
                                   TextAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{DynamicResource NavBarButtonBackgroundHoverBrush}" />
                            <Setter Property="TextElement.Foreground" TargetName="BtnText" Value="{DynamicResource NavBarButtonTextHoveredBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{DynamicResource NavBarButtonBackgroundActiveBrush}" />
                            <Setter Property="TextElement.Foreground" TargetName="BtnText" Value="{DynamicResource NavBarButtonTextActiveBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>