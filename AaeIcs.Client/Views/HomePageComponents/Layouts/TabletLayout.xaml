                        <RowDefinition x:Name="CG_R3" Height="auto" />
                        <RowDefinition x:Name="CG_R4" Height="auto" />
                    </Grid.RowDefinitions>
                    
                    <ContentControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
