<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="ToggleButtonTemplate" TargetType="ToggleButton">
        <Border x:Name="SwitchBorder" 
                Width="58" Height="30" 
                CornerRadius="15" 
                Background="{DynamicResource ToggleButtonBackground}">
            <Border x:Name="SwitchShape"
                    HorizontalAlignment="Left" 
                    Margin="4,0,4,0"
                    Width="22" Height="22" 
                    CornerRadius="15"
                    Background="{DynamicResource ToggleButtonSwitchDisabledBackground}"
                    Effect="{StaticResource ToggleButtonShadow}">
            </Border>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="SwitchBorder" Property="Background" Value="{DynamicResource ToggleButtonBackgroundHover}"/>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="SwitchShape" Property="HorizontalAlignment" Value="Right"/>
                <Setter TargetName="SwitchShape" Property="Background" Value="{DynamicResource ToggleButtonSwitchEnabledBackground}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>