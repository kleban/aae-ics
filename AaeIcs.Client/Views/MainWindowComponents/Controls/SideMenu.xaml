<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AAEICS.Client.Views.MainWindowComponents.Controls">
    
    <ControlTemplate x:Key="SideMenuTemplate">
        <Border Style="{DynamicResource SideMenuStyle}">
            <local:SideMenuBody />
        </Border>
    </ControlTemplate>
    
    <DataTemplate x:Key="FlyoutMenuTemplate">
        <Border Style="{DynamicResource SideMenuStyle}">
            <Grid>
                <Button Style="{DynamicResource CloseMenuButtonStyle}"
                        Tag="{DynamicResource Icon.CloseMenu}"
                        Command="{Binding CloseFlyoutMenuCommand}"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,10,10,0"
                        Width="30" Height="30"/>
            
                <local:SideMenuBody Margin="0,40,0,0" />
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>