<Page x:Class="AAEICS.Client.Views.IncomingCertificatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AAEICS.Client.Views"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      mc:Ignorable="d"
      Title="HomePage" 
      d:DesignHeight="800" d:DesignWidth="1000">
    <Page.Resources>
        <Style x:Key="CellBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="InputBox" TargetType="Border" BasedOn="{StaticResource CellBorder}">
            <Setter Property="Height" Value="40"/> <Setter Property="Margin" Value="0,0,0,10"/> <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="TableHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/> <ColumnDefinition Width="50"/> <ColumnDefinition Width="1*"/> </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Border Style="{StaticResource InputBox}">
                    <TextBlock Text="Компанія А (Ліворуч)" VerticalAlignment="Center"/>
                </Border>
                <Border Style="{StaticResource InputBox}" Width="200" HorizontalAlignment="Left">
                     <TextBlock Text="Код" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <Border Style="{StaticResource InputBox}">
                     <TextBlock Text="Компанія Б (Праворуч)" VerticalAlignment="Center"/>
                </Border>
                <Border Style="{StaticResource InputBox}">
                     <TextBlock Text="Деталі" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Style="{StaticResource CellBorder}" Margin="0,20,0,0">
            <TextBlock Text="ЗАГОЛОВОК ДОКУМЕНТА" HorizontalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/> <RowDefinition Height="30"/> <RowDefinition Height="*"/>  <RowDefinition Height="30"/> </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource CellBorder}">
                <TextBlock Text="№ / Назва" Style="{StaticResource TableHeader}"/>
            </Border>
            
            <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource CellBorder}">
                <TextBlock Text="Параметри" Style="{StaticResource TableHeader}"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" Style="{StaticResource CellBorder}">
                <TextBlock Text="Результати" Style="{StaticResource TableHeader}"/>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CellBorder}"/>
            
            <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="1" Grid.Column="4" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="1" Grid.Column="5" Style="{StaticResource CellBorder}"/>


            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="2" Grid.Column="4" Style="{StaticResource CellBorder}"/>
            <Border Grid.Row="2" Grid.Column="5" Style="{StaticResource CellBorder}"/>

            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" Style="{StaticResource CellBorder}">
                <TextBlock Text="Всього:" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,20,0"/>
            </Border>

        </Grid>
    </Grid>
</Page>
