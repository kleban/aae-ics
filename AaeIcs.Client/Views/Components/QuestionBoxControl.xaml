<UserControl x:Class="AAEICS.Client.Views.Components.QuestionBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AAEICS.Client.Views.Components"
             mc:Ignorable="d"
             Name="RootControl">
    <Border CornerRadius="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Background="White">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="#D3D3D3"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrandBrush}"/>
                    </Trigger>
                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrandBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
            
            <TextBlock Text="{Binding ElementName=RootControl, Path=QuestionText}" 
                       Margin="5" 
                       Foreground="Black" 
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="300"/>
            
            <ContentPresenter Content="{Binding ElementName=RootControl, Path=InputControls}" 
                              Margin="5" 
                              VerticalAlignment="Center"/>
        </WrapPanel>
    </Border>
</UserControl>
