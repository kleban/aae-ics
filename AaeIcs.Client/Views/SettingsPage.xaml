<Page x:Class="AAEICS.Client.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AAEICS.Client.Views"
      mc:Ignorable="d"
      Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,0">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{DynamicResource LightThemeSettingsOption}" Style="{DynamicResource TitleBarHeader}"/>
                <ToggleButton Grid.Column="1" 
                              Template="{DynamicResource ToggleButtonTemplate}"
                              HorizontalAlignment="Left"
                              Width="60" Height="30" 
                              Margin="5,0,5,0"
                              IsChecked="{Binding IsDarkTheme, Mode=TwoWay}" />
                <TextBlock Grid.Column="2" Text="{DynamicResource DarkThemeSettingsOption}" Style="{DynamicResource TitleBarHeader}"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,10,0">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{DynamicResource UkLanguageSettingsOption}" Style="{DynamicResource TitleBarHeader}"/>
                <ToggleButton Grid.Column="1" 
                              Template="{DynamicResource ToggleButtonTemplate}"
                              HorizontalAlignment="Left"
                              Margin="5,0,5,0"
                              Width="60" Height="30" 
                              IsChecked="{Binding IsEnglishLanguage, Mode=TwoWay}"/>
                <TextBlock Grid.Column="2" Text="{DynamicResource EnLanguageSettingsOption}" Style="{DynamicResource TitleBarHeader}"/>
            </Grid>
        </StackPanel>
    </Grid>

</Page>
