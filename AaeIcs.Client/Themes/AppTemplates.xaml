    <ControlTemplate x:Key="SideMenuTemplate">
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Style="{DynamicResource SideMenuStyle}">
            <Grid>
                <StackPanel Style="{DynamicResource MenuStackPanelStyle}">
                    <Button Style="{DynamicResource MenuButton1Style}" />
                    <Button Style="{DynamicResource MenuButton2Style}" />
                    <Button Style="{DynamicResource MenuButton3Style}" />
                    <Button Style="{DynamicResource MenuButton4Style}" />
                    <Button Style="{DynamicResource MenuButton5Style}" />
                </StackPanel>
                <TextBlock Text="D E S I G N   T H E   I N T E R F A C E"
                           FontFamily="Fonts/#Saira SemiBold" FontSize="10"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Foreground="#959FAC"
                           Margin="0,0,10,10" />
            </Grid>
        </Border>
    </ControlTemplate>
    
    <DataTemplate x:Key="MainMenuTemplate">
        <Border Style="{DynamicResource SideMenuStyle}">
            <Grid>
                <Button Command="{Binding CloseMenuCommand}" Style="{DynamicResource CloseMenuButton}" />
                <StackPanel Style="{DynamicResource MenuStackPanelStyle}">
                    <Button Style="{DynamicResource MenuButton1Style}" />
                    <Button Style="{DynamicResource MenuButton2Style}" />
                    <Button Style="{DynamicResource MenuButton3Style}" />
                    <Button Style="{DynamicResource MenuButton4Style}" />
                    <Button Style="{DynamicResource MenuButton5Style}" />
                </StackPanel>
                <TextBlock Text="D E S I G N   T H E   I N T E R F A C E"
                           FontFamily="Fonts/#Saira SemiBold" FontSize="10"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Foreground="#959FAC"
                           Margin="0,0,10,10" />
            </Grid>
        </Border>
    </DataTemplate>
    
    <DataTemplate x:Key="MenuTemplate">
        <Border 
                CornerRadius="12"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <ContentControl Content="{Binding}" Width="230" HorizontalAlignment="Left">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{DynamicResource MainMenuTemplate}" />
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>
    </DataTemplate>
    
